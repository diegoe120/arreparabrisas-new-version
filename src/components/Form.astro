<form
    class="bg-slate-600 p-2 my-4 text-neutral-200"
    action=""
    method="post"
    autocomplete="on"
>
    <fieldset class="text-neutral-800">
        <legend class="text-2xl justify-center mb-2"
            >Consulta por Presupuesto</legend
        >
        <div class="p-2">
            <label class="mr-2" for="nombre">Nombre:</label>
            <input
                type="text"
                id="nombre"
                name="nombre"
                autocomplete="name"
                minlength="4"
                maxlength="15"
                required
            />
            <label class="mr-2" for="apellido">Apellido:</label>
            <input
                type="text"
                id="apellido"
                name="apellido"
                autocomplete="family-name"
                minlength="4"
                maxlength="15"
            />
        </div>
        <div class="p-2">
            <label class="mr-2" for="correo">E-mail:</label>
            <input
                type="email"
                id="correo"
                name="correo"
                autocomplete="email"
                required
            />
        </div>
        <div class="p-2">
            <label for="archivoImagen">Agregar fotos del parabrisas:</label>
            <input
                type="file"
                id="archivoImagen"
                name="archivoImagen"
                accept="image/*"
                required
            />
        </div>
        <div class="p-2">
            <textarea
                class="text-neutral-400"
                name="mensaje"
                rows="5"
                cols="50"
                id=""
                >Descripción y tiempo desde que se daño el parabrisas
            </textarea>
        </div>
        <button
            class="bg-slate-400 text-neutral-800 m-4 py-2 px-8 uppercase font-bold border-none hover:bg-slate-700 hover:text-neutral-300"
            type="submit"
            value="submit">Enviar</button
        >
    </fieldset>
</form>

<script src="../scripts/validacion.js"></script>
