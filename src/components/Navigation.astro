---
import "../css/globales.css";
---

<style>
    .menu {
        align-items: center;
        text-align: center;
        overflow: hidden;
        padding: 1rem;
        background-color: #333;
        color: #fff;
        position: sticky;
        top: 0;
        z-index: 100;
    }
    a {
        color: #fff;
    }
    .menu-options {
        margin-top: 1rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .menu a {
        text-decoration: none;
    }
    .menu-titulo {
        color: red;
        font-weight: bold;
        font-size: 1.2rem;
        text-transform: uppercase;
    }

    @media (min-width: 768px) {
        .menu {
            display: flex;
            justify-content: space-between;
        }
        .menu-options {
            flex-direction: row;
            margin-top: 0;
            align-items: center;
        }
    }
</style>

<div class="menu">
    <a class="menu-titulo" href="/">Arreparabrisas</a>
    <div class="menu-options">
        <a class="" href="index.html">INICIO</a>
        <a class="" href="#">GARANTIA</a>
        <a class="" href="#">CONTACTO</a>
    </div>
</div>
