---
import { Image } from "astro:assets";
import imgHeader from "../img/imagenHero.webp";
---

<header class="flex relative text-left text-claro">
    <Image
        class="-z-10 object-cover w-full h-80"
        src={imgHeader}
        alt="Imagen Header"
    />
    <div class="header-titulo absolute p-6 font-noto font-bold">
        <h1 class="">
            <span class="italic">Arre</span>Parabrisas
        </h1>
        <h2 class="italic text-sm leading-10">
            Reparación de Parabrisas,<br /> pequeños golpes y rajaduras
        </h2>
    </div>
</header>

<style>
    .header-titulo {
    }
    .header-titulo-span {
        font-style: italic;
    }
    h1 {
        font-size: 8vw;
        font-weight: bold;
        padding-bottom: 0;
    }
    h2 {
        padding-top: 0;
        font-size: 4vw;
    }

    @media (min-width: 468px) {
        .header-imagen {
            max-height: 40vw;
        }
        h1 {
            font-size: 6vw;
        }
        h2 {
            font-size: 3vw;
        }
    }
</style>
