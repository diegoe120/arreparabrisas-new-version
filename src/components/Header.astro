---
import { Image } from "astro:assets";
import imgHeader from "../img/imagenHero.webp";
---

<header class="header text-claro">
    <Image class="header-imagen" src={imgHeader} alt="Imagen Header" />
    <div class="header-titulo">
        <h1><span class="header-titulo-span">Arre</span>Parabrisas</h1>
        <h2 class="drop-shadow-md">
            Reparación de Parabrisas, pequeños golpes y rajaduras
        </h2>
    </div>
</header>

<style>
    .header {
        display: flex;
        position: relative;
        align-items: center;
        justify-content: center;
    }
    .header-titulo {
        position: absolute;
        padding: 2rem;
        text-align: center;
    }
    .header-titulo-span {
        font-style: italic;
    }
    h1 {
        font-size: 8vw;
        font-weight: bold;
        padding-bottom: 0;
    }
    h2 {
        padding-top: 0;
        font-size: 4vw;
    }
    .header-imagen {
        z-index: -2;
        width: 100%;
        height: 50vw;
    }
    @media (min-width: 468px) {
        .header-imagen {
            max-height: 40vw;
        }
        h1 {
            font-size: 6vw;
        }
        h2 {
            font-size: 3vw;
        }
    }
</style>
